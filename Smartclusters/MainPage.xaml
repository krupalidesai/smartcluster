		xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  xmlns:Web="clr-namespace:Smartclusters.Web"  x:Class="Smartclusters.MainPage"
		mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600">
    
    <Grid x:Name="LayoutRoot" Width="900" Height="600">
        
        <Canvas Margin="2" Background="AliceBlue">
            <Button x:Name="menu1" Content="Back" Click="menu1_Click_1"  Width="50" Height="25" Canvas.Left="10"></Button>
        </Canvas>
        
        <toolkit:TreeMap Grid.Row="1" ItemsSource="{Binding}" Name="SilverlightTreemap" Width="640" Height="480">
            <toolkit:TreeMap.ItemDefinition>
                <toolkit:TreeMapItemDefinition ValuePath="stck_mrkt_valu">
                    <DataTemplate>
                        <Border Background="Lavender" Padding="3" BorderBrush="LightSeaGreen" BorderThickness="1" CornerRadius="4" ToolTipService.ToolTip="{Binding stck_mrkt_valu}">
                            <TextBlock Text="{Binding stck_name}" Foreground="BlueViolet" FontSize="16" FontFamily="calibri"></TextBlock>
                        </Border>
                    </DataTemplate>
                    
                </toolkit:TreeMapItemDefinition>
                
            </toolkit:TreeMap.ItemDefinition>
            
        </toolkit:TreeMap>

